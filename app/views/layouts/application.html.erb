<!DOCTYPE html>
<html>
<head>
  <title>
    <% if content_for?(:title) %>
      <%= yield(:title) %>
    <% else %>
      Everything Japan
    <% end %>
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag "flatly" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
<body>

  <%= render "welcome/login_modal" %>                 
  <%= render "welcome/sign_up_modal" %> 

  <%= stylesheet_link_tag "posts" %>

  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
  </div>

  <%= yield :top_content %>

  <!-- Navigation Section -->

      <nav class="navbar navbar-default navbar-fixed-top" id="nav-bar">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Everything Japan</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li class="active"><%= link_to 'Home', posts_path %></li>
              <li><a href="#about">Anime</a></li>
              <li><a href="#contact">Video Games</a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sort Articles <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Newest Article', 'posts?sort_by=date_newest' %></li>
            <li><%= link_to 'Oldest Article', 'posts?sort_by=date_oldest' %></li>
          </ul>
              </li>
              <li>
                  <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#new-post">
                    Write New Post
                  </button>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                  <li><%= link_to 'Profile', edit_user_registration_path %></li>
                  <li><%= link_to 'Log out', destroy_user_session_path, :method => :delete %></li>

              <% else %>
                  <li><%= link_to 'Sign Up', "#sign_up", "data-toggle" => "modal" %></a></li>
                  <li><%= link_to 'Login', "#login", "data-toggle" => "modal" %> </a></li>
              <% end %>   
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </nav>
  </nav>

  <!-- Header Section -->
  <header>

  <div class="container">
      <div class="page-header">
        <%=image_tag("japan-banner2.jpg", class: "banner-image")%>
      </div>
  </header>

<%= yield %>
  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD-CClVVnN2RnG6ICiyr-Vh_qLgQpbYhU0&libraries=places"></script>
  <script src="./assets/jquery.geocomplete.js"></script>
</body>
</html>
