<!DOCTYPE html>
<html>
<head>
  <title>Everything Japan</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>


  <%= stylesheet_link_tag "posts" %>


<!-- Navigation Section -->

    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Everything Japan</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><%= link_to 'Home', posts_path %></li>
            <li><a href="#about">Anime</a></li>
            <li><a href="#contact">Video Games</a></li>
            <li class="dropdown">
            	<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sort Articles <span class="caret"></span></a>
			  <ul class="dropdown-menu">
			    <li><%= link_to 'Newest Article', 'posts?sort_by=date_newest' %></li>
			    <li><%= link_to 'Oldest Article', 'posts?sort_by=date_oldest' %></li>
			  </ul>
            </li>
            <li>
                <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#new-post">
                  Write New Post
                </button>
              </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Sign Up', new_user_path %></li>
            <li><a href="../navbar-static-top/">Login</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
</nav>

<!-- Header Section -->
<header>

<div class="container">
		<div class="page-header">
			<%=image_tag("banner-home-japan.jpg", class: "img-rounded")%>
		</div>
</header>

</head>
<body>

<%= yield %>

</body>
</html>
