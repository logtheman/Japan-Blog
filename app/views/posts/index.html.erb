
<%= render 'modal', post: Post.new %>

<!-- Post Body-->

<ul class="post">
	<% @posts.each do |f| %>
  		<li>Posted: <%= f.created_at.strftime('%D') %></li>
  		<div class="panel panel-primary">
  		  <div class="panel-heading">
  				<h3 class="panel-title"><li><%= f.title %> </li></h3>
  			</div>
  			<div class="panel-body">
  				<li><%= f.description %></li>
  			</div>
        <div class="panel-body">
          <li>Tags: <%= raw f.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></li>
        </div>
  			<div class="panel-body">
        <%= render 'modal', post: f %>
						<ul class="nav navbar-nav navbar-right">
            <li>
              <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#edit-post-<%= f.id %>">
                  Edit Post
                </button>
            </li>
                <li>
                  <%= link_to post_path(f), class: "btn btn-default btn-lg" do %>
                      <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
                  <% end %>
                </li>
                <li>
                  <%= link_to edit_post_path(f), class: "btn btn-default btn-lg" do %>
                      <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                  <% end %>
                </li>
						    <li><%= link_to 'Delete', post_path(f),
						method: :delete,
						data: { confirm: 'Are you sure you want to delete?'} %></li>
						 </ul>
					</div>
		  		</li>
		  	</div>
		</div>
  	<% end %>
</ul>

